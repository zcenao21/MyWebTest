<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0" >

  <servlet>
    <servlet-name>dispatcher</servlet-name>
    <servlet-class>com.will.DispatcherServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>counter</servlet-name>
    <servlet-class>com.will.CounterServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>download</servlet-name>
    <servlet-class>com.will.DownloadServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>cookie</servlet-name>
    <servlet-class>com.will.CookieInspectServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>compact</servlet-name>
    <servlet-class>com.will.CompactServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>numberImg</servlet-name>
    <servlet-class>com.will.ImgNumberServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>referer</servlet-name>
    <servlet-class>com.will.ReferServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>counter</servlet-name>
    <url-pattern>/count</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>compact</servlet-name>
    <url-pattern>/compact</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>dispatcher</servlet-name>
    <url-pattern>/dispatcher</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>counter</servlet-name>
    <url-pattern>/counter</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>download</servlet-name>
    <url-pattern>/download</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>cookie</servlet-name>
    <url-pattern>/cookie</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>referer</servlet-name>
    <url-pattern>/referer</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>numberImg</servlet-name>
    <url-pattern>/numberImg</url-pattern>
  </servlet-mapping>

  <context-param>
    <param-name>logbackDisableServletContainerInitializer</param-name>
    <param-value>true</param-value>
  </context-param>
  <context-param>
    <param-name>isLog4jAutoInitializationDisabled</param-name>
    <param-value>true</param-value>
  </context-param>
  <context-param>
    <param-name>isLog4jAutoInitializationDisabled</param-name>
    <param-value>true</param-value>
  </context-param>
  <context-param>
    <param-name>name</param-name>
    <param-value>Will</param-value>
  </context-param>
  <listener>
    <listener-class>com.will.MyServletContextListener</listener-class>
  </listener>

  <welcome-file-list>
    <welcome-file>login.html</welcome-file>
  </welcome-file-list>

  <jsp-config>
    <taglib>
      <taglib-uri>/mytaglib</taglib-uri>
      <taglib-location>
        /WEB-INF/mytaglib.tld
      </taglib-location>
    </taglib>
  </jsp-config>

</web-app>
